{
  "app": {
    "identifier": "timepage",
    "name": "Timepage",
    "icon_url": "",
    "appstore_url": "https://itunes.apple.com/de/app/timepage/id989178902?l=en&mt=8",
    "documentation_url": "https://moleskine.helpscoutdocs.com/article/92-timepage-url-scheme"
  },
  "actions": [
    {
      "name": "Open App",
      "description": "Open Timepage",
      "url": "timpage://"
    },
    {
      "name": "Add Event",
      "description": "",
      "url": "timpage://add-event?title=[title]&day=[day]",
      "supports-x-callback-url": true,
      "parameters": [
        {
          "name": "title",
          "description": "The title of the event"
        },
        {
          "name": "day",
          "description": "The date of the event"
          "options": [
            "Date in the format yyyy-mm-dd",
            "Special strings \"today\" or \"tomorrow\"",
            "Upcoming weekday name (long or short) such as \"monday\", \"tuesday\", \"wed\", etc.  Is specific to the language set by the device.  Always specifies the next upcoming day with this name."
          ]
        }
      ]
    },
    {
      "name": "Open Event",
      "description": "Open Timepage and show a specified event.",
      "url": "timpage://open_event?event=[event]",
      "parameters": [
        {
          "name": "event",
          "description": "The event identifier",
          "options": [
            "special identifiert \"next\"",
            "event_id"
          ]
        }
      ]
    },
    {
      "app": "timepage",
      "name": "Open Event Map",
      "description": "Open Timepage and show a specified event on the map",
      "url": "timpage://open_event_map?event=[event]",
      "parameters": [
        {
          "name": "event",
          "description": "The event identifier",
          "options": [
            "special identifiert \"next\"",
            "event_id"
          ]
        }
      ]
    }
  ]
}
